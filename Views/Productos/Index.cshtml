@model List<Producto>

<h2>Lista de productos</h2>

<a asp-action="Crear" class="btn btn-success mb-3">Nuevo producto</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Color</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Precio</td>
                <td>@p.Color</td>
            </tr>
        }
    </tbody>
</table>
